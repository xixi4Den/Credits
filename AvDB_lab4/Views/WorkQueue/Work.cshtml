@model AvDB_lab4.Models.ApprovalTaskViewModel

@{
    ViewBag.Title = "Work";
}

<h2>Work</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Approval Task</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)
        
        @Html.DisplayFor(x => x.Task)

        <div class="form-group">
            @Html.LabelFor(model => model.OutcomeViewModel, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.OutcomeViewModel, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.OutcomeViewModel, "", new { @class = "text-danger" })
            </div>
        </div>
        
        <div id="RejectionReasonSection" class="form-group">
            @Html.LabelFor(model => model.RejectionReasonViewModel, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.RejectionReasonViewModel, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.RejectionReasonViewModel, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

<script>
    $(document).ready(function () {
        if ($('#OutcomeViewModel_SelectedOutcome').val() !== "0") {
            $('#RejectionReasonSection').addClass('hide');
        }
        $('#OutcomeViewModel_SelectedOutcome').change(function () {
            if ($(this).val() === "0") {
                $('#RejectionReasonSection').removeClass('hide');
            } else {
                $('#RejectionReasonSection').addClass('hide');
            }
        });
    });
</script>
