@using AvDB_lab4.Entities.Credits
@model AvDB_lab4.Models.ApplicationDetailsViewModel

@{
    ViewBag.Title = "Application Details";
}

<h2>Application Details</h2>

@Html.DisplayForModel(Model)

@if (Model.IsCompleted && Model.Outcome == Outcome.Accept)
{
    <p>
        @Html.ActionLink("Repayment Chart", "RepaymentChart", "Application", new { id = Model.Id }, new { @class = "btn btn-info" })
    </p>
}

<p>
    @Html.ActionLink("Back to List", "List", "Application", null, new { @class = "btn btn-info" })
</p>
