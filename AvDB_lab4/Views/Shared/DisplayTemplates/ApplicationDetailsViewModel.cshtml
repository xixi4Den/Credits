@model AvDB_lab4.Models.ApplicationDetailsViewModel

<div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.ClientName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ClientName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.CreditCategory)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CreditCategory.DisplayText)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.RegisterDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.RegisterDate)
        </dd>
        @if (Model.IsCompleted)
        { 
            <dt>
                @Html.DisplayNameFor(model => model.CompleteDate)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.CompleteDate)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Outcome)
            </dt>
            if (Model.Outcome == 0)
            {
                <dd>
                    Rejected
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.RejectionReason)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.RejectionReason)
                </dd>
            }
            else
            {
                <dd>
                    Accepted
                </dd>
            }
        }
        else
        {
            <dt>
                State
            </dt>

            <dd>
                Processing
            </dd> 
        }
    </dl>
</div>
<p>
    @Html.ActionLink("Back to List", "Index")
</p>
